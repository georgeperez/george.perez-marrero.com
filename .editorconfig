root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.yml]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = spaces

# Markdown override allow for spaces at end of line
[*.md]
trim_trailing_whitespace = false
